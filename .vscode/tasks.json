{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build",                      // Label used in "launch.json"
        "type": "shell",
        "command": "make",                     // Command to build the project using your Makefile
        "args": ["all"],                       // Arguments passed to the command
        "group": {
          "kind": "build",
          "isDefault": true                    // Makes it the default build task
        },
        "problemMatcher": ["$gcc"],            // Optional: Matches build errors to highlight in editor
        "detail": "Build project using make"   // Optional: Description shown in UI
      }
    ]
  }
  